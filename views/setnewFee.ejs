<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Fee Structure Input</title>
  <style>
    /* ===== General Reset ===== */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: url('/images/upload-bg-image.png') no-repeat center center/cover;
      padding: 1rem;
    }

    /* ===== Card Wrapper ===== */
    .card {
      background: #fff;
      padding: 2rem;
      border-radius: 16px;
      width: 100%;
      max-width: 800px;
      box-shadow: 0px 6px 18px rgba(0, 0, 0, 0.08);
    }

    h1 {
      text-align: center;
      margin-bottom: 1.5rem;
      color: #222;
    }

    /* ===== Radio Options ===== */
    .option-group {
      display: flex;
      justify-content: space-around;
      margin-bottom: 1.5rem;
    }

    .option-group label {
      cursor: pointer;
      font-weight: 500;
    }

    /* ===== Sections ===== */
    .form-section {
      display: none;
      background: #f9f9f9;
      padding: 1.5rem;
      margin-bottom: 1rem;
      border-radius: 12px;
      border: 1px solid #ccc;
    }

    .form-section h3 {
      margin-bottom: 1rem;
      color: #007bff;
    }

    .form-section label {
      display: block;
      margin-bottom: 0.3rem;
      font-weight: 500;
    }

    .form-section input {
      width: 100%;
      padding: 0.7rem;
      margin-bottom: 1rem;
      border: 1.5px solid rgba(0, 0, 0, 0.3);
      border-radius: 6px;
      outline: none;
      transition: box-shadow 0.3s, border-color 0.3s;
    }

    .form-section input:focus {
      border-color: #007bff;
      box-shadow: 0 0 6px rgba(0, 123, 255, 0.25);
    }

    /* ===== Error Message ===== */
    .error {
      color: #d9534f;
      font-weight: 500;
      text-align: center;
      margin-bottom: 1rem;
      display: none;
    }

    /* ===== Submit Button ===== */
    button {
      width: 100%;
      padding: 0.9rem;
      border: none;
      border-radius: 12px;
      background: #007bff;
      color: #fff;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s, transform 0.1s;
    }

    button:hover {
      background: #0056b3;
    }

    button:active {
      transform: scale(0.98);
    }

    /* ===== Section Card Styling ===== */
    .feeSection {
      padding: 0.8rem;
      margin-bottom: 0.8rem;
      background-color: #e8f3ff;
      border-radius: 6px;
    }
  </style>
</head>

<body>

  <div class="card">
    <h1>Enter Fee Structure</h1>

    <!-- Fee Type Selection -->
    <div class="option-group">
      <label><input type="radio" name="feeType" value="tuition" checked /> Tuition</label>
      <label><input type="radio" name="feeType" value="transport" /> Transport</label>
      <label><input type="radio" name="feeType" value="uniform" /> Uniform</label>
    </div>

    <!-- Tuition Section -->
    <form id="feeForm" action="/home/feeUpdate" method="post">
      <div id="tuitionSection" class="form-section">
        <h3>Tuition Fee</h3>
        <div class="feeSection">
          <label>NUR-UKG Admission Fee</label>
          <input type="text" name="tutionfee00" pattern="[0-9]{1,5}" />
          <label>NUR-UKG Monthly Fee</label>
          <input type="text" name="tutionfee01" pattern="[0-9]{1,5}" />
        </div>
        <div class="feeSection">
          <label>Class 1-5 Admission Fee</label>
          <input type="text" name="tutionfee10" pattern="[0-9]{1,5}" />
          <label>Class 1-5 Monthly Fee</label>
          <input type="text" name="tutionfee11" pattern="[0-9]{1,5}" />
        </div>
        <div class="feeSection">
          <label>Class 6-8 Admission Fee</label>
          <input type="text" name="tutionfee20" pattern="[0-9]{1,5}" />
          <label>Class 6-8 Monthly Fee</label>
          <input type="text" name="tutionfee21" pattern="[0-9]{1,5}" />
        </div>
        <div class="feeSection">
          <label>Class 9-10 Admission Fee</label>
          <input type="text" name="tutionfee30" pattern="[0-9]{1,5}" />
          <label>Class 9-10 Monthly Fee</label>
          <input type="text" name="tutionfee31" pattern="[0-9]{1,5}" />
        </div>
      </div>

      <!-- Transport Section -->
      <div id="transportSection" class="form-section">
        <h3>Transport Fee</h3>
        <label>1-5 KM</label>
        <input type="text" name="transport0" pattern="[0-9]{1,5}" />
        <label>6-11 KM</label>
        <input type="text" name="transport1" pattern="[0-9]{1,5}" />
        <label>12-16 KM</label>
        <input type="text" name="transport2" pattern="[0-9]{1,5}" />
        <label>16-20 KM</label>
        <input type="text" name="transport3" pattern="[0-9]{1,5}" />
        <label>21 & 21+ KM</label>
        <input type="text" name="transport4" pattern="[0-9]{1,5}" />
      </div>

      <!-- Uniform Section -->
      <div id="uniformSection" class="form-section">
        <h3>Uniform Fee</h3>
        <label>Regular Uniform</label>
        <input type="text" name="schoolUniform0" pattern="[0-9]{1,5}" />
        <label>Game Uniform</label>
        <input type="text" name="schoolUniform1" pattern="[0-9]{1,5}" />
        <label>Tie</label>
        <input type="text" name="schoolUniform2" pattern="[0-9]{1,5}" />
        <label>Belt</label>
        <input type="text" name="schoolUniform3" pattern="[0-9]{1,5}" />
        <label>ID Card</label>
        <input type="text" name="schoolUniform4" pattern="[0-9]{1,5}" />
        <label>Shoes & Socks</label>
        <input type="text" name="schoolUniform5" pattern="[0-9]{1,5}" />
      </div>

      <div id="error" class="error">Please select a fee type.</div>

      <button type="submit">Submit</button>
    </form>
  </div>

  <script>
    const form = document.getElementById("feeForm");
    const tuition = document.getElementById("tuitionSection");
    const transport = document.getElementById("transportSection");
    const uniform = document.getElementById("uniformSection");
    const error = document.getElementById("error");
    const radios = document.getElementsByName("feeType");

    function hideAllSections() {
      tuition.style.display = "none";
      transport.style.display = "none";
      uniform.style.display = "none";
      error.style.display = "none";
    }

    function showSection(value) {
      hideAllSections();
      switch (value) {
        case "tuition":
          tuition.style.display = "block";
          break;
        case "transport":
          transport.style.display = "block";
          break;
        case "uniform":
          uniform.style.display = "block";
          break;
        default:
          error.style.display = "block";
      }
    }

    radios.forEach((radio) => {
      radio.addEventListener("change", () => {
        showSection(radio.value);
      });
    });

    // On submit validation
    form.addEventListener("submit", (e) => {
      const selected = Array.from(radios).find((r) => r.checked);
      if (!selected) {
        e.preventDefault();
        error.style.display = "block";
        hideAllSections();
      }
    });

    // On page load, show default section
    window.addEventListener("DOMContentLoaded", () => {
      const selected = Array.from(radios).find((r) => r.checked);
      if (selected) showSection(selected.value);
    });
  </script>
</body>

</html>
