<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admission Forms Request</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

    body {
      min-height: 100vh;
      background: url('/images/upload-bg-image.png') no-repeat center center/cover;
      padding: 2rem;
    }

    h2 {
      text-align: center;
      color: #fff;
      margin-bottom: 1.5rem;
      text-shadow: 1px 1px 2px #000;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: rgba(255, 255, 255, 0.95);
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
    }

    thead {
      background-color: #007bff;
      color: #fff;
    }

    th, td {
      color: black;
      padding: 10px;
      border: 1px solid #ddd;
      text-align: center;
      font-size: 0.9rem;
    }

    tr:nth-child(even) {
      background-color: #f1f8ff;
    }

    tr:nth-child(odd) {
      background-color: #ffffff;
    }

    .links-to-take-action{
      display: flex;
      gap: 10px;
      justify-content: center;
      flex-wrap: wrap;
    }


    a.action-link {
      background-color: #007bffc0;
      padding: 5px;
      border-radius: 5px;
      /* color: #ff0000; */
      text-decoration: none;
      font-weight: bold;
      /* margin: 0 5px; */
    }

    a.action-link:hover {
      text-decoration: underline;
    }

    /* Responsive */
    @media (max-width: 1024px) {
      table, thead, tbody, th, td, tr {
        display: block;
      }

      thead tr {
        display: none;
      }

      tr {
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.9);
      }

      td {
        text-align: left;
        border: none;
        padding: 6px 10px;
        position: relative;
      }

      td::before {
        content: attr(data-label);
        font-weight: bold;
        display: inline-block;
        width: 120px;
      }

      a.action-link {
        display: block;
        margin: 2px 0;
      }
    }
  </style>
</head>

<body>
  <h2><% if(done) {%> Admission Completed <% }else if(supAd){%>  Admission Request <%}else{%>Admission Request <%}%></h2>

  <% if (forms && forms.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Email</th>
          <th>Mobile</th>
          <th>Father</th>
          <th>Mother</th>
          <th>Village</th>
          <th>Town</th>
          <th>Process ID</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% forms.forEach((form) => { %>
          <tr>
            <td data-label="Name"><%= form.name %></td>
            <td data-label="Age"><%= form.age %></td>
            <td data-label="Email"><%= form.email %></td>
            <td data-label="Mobile"><%= form.mobNumber %></td>
            <td data-label="Father"><%= form.fname %></td>
            <td data-label="Mother"><%= form.mname %></td>
            <td data-label="Village"><%= form.add.vill %></td>
            <td data-label="Town"><%= form.add.town %></td>
            <td data-label="Process ID"><%= form.processId %></td>
            <td data-label="Status"><%= form.admissionStatus %></td>
            <td data-label="Actions" class="links-to-take-action">
              <a href="https://wa.me/<%= form.mobNumber %>?text=Dear%20<%= form.name %>,%0A%0AYour%20admission%20status%20(Counseling ID <%= form.processId %>)%20has%20been%20updated." target="_blank" class="action-link">WhatsApp</a>
              <a href="tel:<%= form.mobNumber %>" class="action-link">Call</a>
              <a href="mailto:<%= form.email %>?subject=Admission Inquiry - <%= form.processId %>&body=Dear Sir/Madam," class="action-link">Mail</a>
              <a href="/home/admission/updateStatus/CANCEL/<%= form._id %>" class="action-link">Cancel</a>
              <% if (!supAd) { %>
                <a href="/home/admission/updateStatus/DVRL/<%= form._id %>" class="action-link" title="Send to principle for document verification.">Send for DV</a>
              <% } else { %>
                <a href="/home/admission/updateStatus/DONE/<%= form._id %>" class="action-link">TICK To DONE</a>
                <a href="/home/admission/updateStatus/PACR/<%= form._id %>" class="action-link" title="Send to pending." >Send To PAC</a>
              <% } %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p style="text-align:center; color:#fff; text-shadow: 1px 1px 2px #000;">No admission forms available.</p>
  <% } %>

</body>
</html>
