<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admission Forms</title>
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: Arial, sans-serif;
        padding: 10px;
        background-color: #f5f5f5;
      }

      .table {
        width: 100%;
        border-collapse: collapse;
        overflow-x: auto;
      }

      .header,
      .row {
        display: flex;
        flex-wrap: nowrap;
        border: 1px solid #ccc;
      }

      .header {
        background-color: #333;
        color: white;
        font-weight: bold;
      }

      .cell {
        flex: 1;
        padding: 8px;
        border-right: 1px solid #ccc;
        text-align: center;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 14px;
      }

      .cell:last-child {
        border-right: none;
      }

      .row:nth-child(even) {
        background-color: #e8f4ff;
      }

      .row:nth-child(odd) {
        background-color: #ffffff;
      }

      .action-link {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
        margin: 0 5px;
      }

      .action-link:hover {
        text-decoration: underline;
      }

      /* Responsive for small screens */
      @media (max-width: 1423px) {
        .header,
        .row {
          flex-direction: column;
          align-items: flex-start;
        }

        .cell {
          width: 100%;
          border-right: none;
          border-bottom: 1px solid #ddd;
          text-align: left;
        }

        .cell:last-child {
          border-bottom: none;
        }
      }
    </style>
  </head>

  <body>
    <% if(done){%> <% if (forms && forms.length > 0) { %>
   

      <!-- Data Rows -->
      <% forms.forEach((form) => { %>
      <div class="row">
        <div class="cell"><%= form.name %></div>
        <div class="cell"><%= form.age %></div>
        <div class="cell"><%= form.email %></div>
        <div class="cell"><%= form.mobNumber %></div>
        <div class="cell"><%= form.fname %></div>
        <div class="cell"><%= form.mname %></div>
        <div class="cell"><%= form.add.vill %></div>
        <div class="cell"><%= form.add.town %></div>
        <div class="cell"><%= form.processId %></div>
        <div class="cell"><%= form.admissionStatus %></div>

        <!-- Actions in one cell -->
      </div>
      <% }); %>
    <% } else { %>
    <p>No admission forms available.</p>
    <% } %> <% }else {%> <% if (forms && forms.length > 0) { %>
    <div class="table">
      <!-- Header Row -->
    

      <!-- Data Rows -->
      <% forms.forEach((form) => { %>
      <div class="row">
        <div class="cell"><%= form.name %></div>
        <div class="cell"><%= form.age %></div>
        <!-- WhatsApp Link -->
<div class="cell">
  <a href="https://wa.me/<%= form.mobNumber %>?text=Dear%20Sir/Madam,%0A%0AI%20would%20like%20to%20inquire%20about%20the%20admission%20status%20for%20the%20student%20<%= form.name %>,%20son/daughter%20of%20<%= form.fname %>.%0AThe%20counseling%20ID%20is%20<%= form.processId %>.%0A%0ARegards." target="_blank">WhatsApp <%= form.mobNumber %></a>
</div>

        <div class="cell"><a href="tel:<%= form.mobNumber %>">Call <%= form.mobNumber %></a></div>
<div class="cell">

        <a href="mailto:<%= form.email %>?subject=Admission Inquiry - Counseling ID <%= form.processId %>&body=Dear Sir/Madam,%0D%0A%0D%0AI would like to inquire about the admission status for the student <%= form.studentName %>, son/daughter of <%= form.fatherName %>. The counseling ID is <%= form.processId %>.%0D%0A%0D%0ARegards,">Mail <%= form.email %></a>
</div>
        <div class="cell"><%= form.fname %></div>
        <div class="cell"><%= form.mname %></div>
        <div class="cell"><%= form.add.vill %></div>
        <div class="cell"><%= form.add.town %></div>
        <div class="cell"><%= form.processId %></div>
        <div class="cell"><%= form.admissionStatus %></div>

        <div class="cell">
  <a href="https://wa.me/<%=form.mobNumber%>?text=Dear%20<%= form.name %>,%0A%0AYour%20admission%20process%20associated%20with%20Counseling%20ID%20<%= form.processId %>%20has%20been%20cancelled.%0AIf%20you%20have%20any%20questions,%20please%20contact%20the%20administration.%0A%0ARegards." target="_blank">
     Cancel Message
  </a>
</div>

        <!-- Actions in one cell -->
        <div class="cell">
          <a
            href="/home/admission/updateStatus/CANCEL/<%= form._id %>"
            class="action-link"
          >
            Cancel
          </a>
        </div>
        <% if (!supAd) { %>
        <div class="cell">
          <a
            href="/home/admission/updateStatus/DVRL/<%= form._id %>"
            class="action-link"
          >
            Update Status
          </a>
        </div>
        
        <% } else { %>
        <div class="cell">
          <a
            href="/home/admission/updateStatus/DONE/<%= form._id %>"
            class="action-link"
          >
            Update Status
          </a>
        </div>
        <div class="cell">
          <a
            href="/home/admission/updateStatus/PACR/<%= form._id %>"
            class="action-link"
          >
            Send Back
          </a>
        </div>
        <% } %>
      </div>
      <% }); %>
    <% } else { %>
    <p>No admission forms available.</p>
    <% } %> <%} %>
  </body>
</html>
