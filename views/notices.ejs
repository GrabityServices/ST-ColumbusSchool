<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Notices | St. Columbus Public School</title>
    <meta name="description" content="Latest notices, announcements and circulars from St. Columbus Public School, Ekdara, Jhajha. Admissions, exams, holidays and important updates."/>
    <link rel="stylesheet" href="/style/notices.css" />
    <script src="/script/notices.js" defer></script>
  </head>
  <body>
    <!--HEADER  -->
    <%- include('index.ejs') %>

    <!-- HEADING -->
    <section class="notices-heading">
      <div class="notices-overlay"></div>
      <div class="notices-inner">
        <h1>Notices & Announcements</h1>
        <p class="subtitle">
          All latest school notices, circulars, exam schedules and urgent
          updates for parents and students.
        </p>
      </div>
    </section>

    <main>
      <!-- NOTICE CONTAINER -->
      <section class="notice-container">
        <% if(notices && notices.length > 0){ notices.forEach((notice,idx)=>{ %>
        <div class="notice-card"style="border-color:<%= idx==0?"red":"" %>">
          <h3><%= notice.title %></h3>
          <time datetime="<%= notice.messDate %>"><%= notice.messDate %></time>
          <p class="description"><%= notice.mess %></p>
<% if(notice && notice.img) {%>
            
          <a href="<%= notice.img  %>">See Notice</a>

            <%}%>
        </div>
        <% }) } else { %>
        <h2 class="nboard">Notice board is empty!</h2>
        <% } %>
      </section>

      <!-- LOAD MORE BUTTON -->
      <section class="load-more">
        <% if(notices && notices.length>3){%>

        <button class="load-more-btn">Load More</button>
        <% } %>
      </section>
    </main>

    <!-- FOOTER -->
    <footer>
      <div class="footer-container">
        <div class="about-us">
          <h3>About Us</h3>
          <div>
            <p>
              St. Columbus Public School is a private English Medium School
              established for providing quality education to students up to High
              School level with a focus on values, discipline, and all-round
              development.
            </p>
          </div>
        </div>
        <div class="quick-links">
          <h3>Quick Links</h3>
          <div>
            <a href="/">Home</a>
            <a href="/about">About Us</a>
            <a href="/admission">Admission</a>
            <a href="/gallery">Gallery</a>
            <a href="/contact">Contact Us</a>
          </div>
        </div>

        <div class="follow-us">
          <h3>Follow Us</h3>
          <div>
            <a href="#"><i class="fab fa-youtube"></i> YouTube</a>
            <a href="#"><i class="fab fa-facebook"></i> Facebook</a>
            <a href="#"><i class="fab fa-instagram"></i> Instagram</a>
            <a href="#"><i class="fab fa-x-twitter"></i> X</a>
          </div>
        </div>

        <div class="contact-us">
          <h3>Contact Us</h3>
          <div>
            <p>
              <i class="fas fa-map-marker-alt"></i>
              <a
                href="https://maps.google.com/?q=St.+Columbus+Public+School,+Ekdara,+Jhajha,+Jamui+811308+(Bihar),+India"
              >
