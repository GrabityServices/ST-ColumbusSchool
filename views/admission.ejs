    <!-- HEADING -->
    <section class="admission-container">
            <div class="admission-overlay"></div>
            <div class="admission-inner">
                <h1>Admission</h1>
                <p class="subtitle">We welcome applications from parents who wish to provide their children with quality education and a bright future.</p>
            </div>
    </section>

    <main>
        <!-- Admission Process -->
        <section class="admission-process container">
            <h2>Admission Process</h2>
            <div class="steps ">
                <div class="step">
                    <h4>Step 1</h4>
                    <p>Collect admission form from office.</p>
                </div>
                <div class="step">
                    <h4>Step 2</h4>
                    <p>Submit form with required documents.</p>
                </div>
                <div class="step">
                    <h4>Step 3</h4>
                    <p>Attend short interaction/entrance.</p>
                </div>
                <div class="step">
                    <h4>Step 4</h4>
                    <p>Confirm admission after fee payment.</p>
                </div>
            </div>
        </section>

        <!-- Eligibility -->
        <section class="eligibility container">
            <h2>Eligibility</h2>
            <ul>
                <li><strong>Nursery to UKG:</strong> Minimum age 3 years</li>
                <li><strong>Class I onwards:</strong> Based on previous class performance & interaction</li>
                <li><strong>Up to Class X:</strong> English Medium, co-educational</li>
            </ul>
        </section>
        
        <!-- Documents -->
        <section class="documents container">
            <h2>Documents Required</h2>
            <ul>
                <li>Birth Certificate (for Nursery to Class I)</li>
                <li>Transfer Certificate (for Class II onwards)</li>
                <li>Report Card of previous class</li>
                <li>4 Passport size photographs</li>
                <li>Address Proof of Parents</li>
            </ul>
        </section>

        <!-- Fee Structure -->
        <section class="fee-structure container">
            <h2>Fee Structure</h2>
            <table>
                <tr>
                    <th>Class</th>
                    <th>Admission Fee</th>
                    <th>Monthly Fee</th>
                </tr>
                <tr>
                    <td>Nursery - UKG</td>
                    <td>₹2,000</td>
                    <td>₹500</td>
                </tr>
                <tr>
                    <td>Class I - V</td>
                    <td>₹3,000</td>
                    <td>₹700</td>
                </tr>
                <tr>
                    <td>Class VI - VIII</td>
                    <td>₹4,000</td>
                    <td>₹900</td>
                </tr>
                <tr>
                    <td>Class IX - X</td>
                    <td>₹5,000</td>
                    <td>₹1,200</td>
                </tr>
            </table>
        </section>
        
        <!-- Important Dates -->
        <section class="important-dates container">
            <h2>Important Dates</h2>
            <ul>
                <li><strong>Admission Form Availability:</strong> 1st March 2025</li>
                <li><strong>Last Date of Submission:</strong> 25th March 2025</li>
                <li><strong>Entrance Test / Interaction:</strong> 1st April 2025</li>
                <li><strong>Session Begins:</strong> 10th April 2025</li>
            </ul>
        </section>
    </main>

