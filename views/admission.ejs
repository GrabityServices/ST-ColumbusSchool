    <!-- HEADING -->
    <section class="admission-container">
      <div class="admission-overlay"></div>
      <div class="admission-inner animate slide-in-bottom">
        <h1>Admission</h1>
        <p class="subtitle">
          We welcome applications from parents who wish to provide their
          children with quality education and a bright future.
        </p>
      </div>
    </section>

    <main class="animate scale-in-bottom">
      <!-- Admission Buttons -->
      <section d="sec" class="admission-buttons">
        <a href="/admission/form" class="btn-secondary">Enroll Now</a>
        <a href="/admission/getEnroll" class="btn-primary">Check Status</a>
      </section>

      <!-- Admission Process -->
      <section class="admission-process container">
        <h2 class="animate slide-in-bottom">Admission Process</h2>
        <div class="steps">
          <div class="step animate slide-in-right">
            <h4>Step 1</h4>
            <p>Get the form from the office or fill it online.</p>
          </div>
          <div class="step animate slide-in-right">
            <h4>Step 2</h4>
            <p>Submit the form with documents.</p>
          </div>
          <div class="step animate slide-in-right">
            <h4>Step 3</h4>
            <p>Attend the interaction or test.</p>
          </div>
          <div class="step animate slide-in-right">
            <h4>Step 4</h4>
            <p>Pay the fee to confirm admission.</p>
          </div>
        </div>
      </section>

      <!-- RTE Admission -->
      <section class="rte-admission container">
        <h2>RTE Admission</h2>
        <p>
          We provide admissions under the Right to Education (RTE) quota for eligible children.
          RTE admissions ensure access to quality education for all.
        </p>
        <ul>
          <li>Eligibility: Children from economically weaker sections</li>
          <li>Documents Required:
            <ul>
              <li>Income Certificate</li>
              <li>Residence Proof</li>
              <li>Birth Certificate</li>
            </ul>
          </li>
          <li>Quota: 25% of total seats are reserved under RTE</li>
        </ul>
      </section>


      <!-- Eligibility -->
      <section class="eligibility container">
        <h2>Eligibility</h2>
        <ul>
          <li><strong>Nursery to UKG:</strong> Minimum age 3 years</li>
          <li>
            <strong>Class I onwards:</strong> Based on previous class
            performance & interaction
          </li>
          <li>
            <strong>Up to Class X:</strong> English Medium, co-educational
          </li>
        </ul>
      </section>

      <!-- Documents -->
      <section class="documents container">
        <h2>Documents Required</h2>
        <ul>
          <li>Birth Certificate (for Nursery to Class I)</li>
          <li>Transfer Certificate (for Class II onwards)</li>
          <li>Report Card of previous class</li>
          <li>4 Passport size photographs</li>
          <li>Address Proof of Parents</li>
        </ul>
      </section>

