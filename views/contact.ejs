    <script src="script\contact.js" defer></script>
  </head>

  <body>
    <!-- NAV -->
    <%- include('index.ejs') %>

    <!-- HEADING -->
    <section class="contact-heading">
      <div class="contact-overlay"></div>
      <div class="contact-inner">
        <h1>Contact</h1>
        <p class="subtitle">
          We're here to answer your questions and guide you.
        </p>
      </div>
    </section>

    <main>
      <!-- TEXT AND IMAGE -->
      <section class="contact-text-and-image container">
        <div class="contact-first-container">
          <div class="our-location">
            <p>Let's Connect</p>
            <h1>Our Locations.</h1>
          </div>
          <div class="address-section">
            <p>
              <strong>Address : &nbsp;&nbsp;</strong>St. Columbus Public School,
              Ekdara, Jhajha, Jamui 811308 (Bihar), India
            </p>
            <p>
              <strong>Phone : &nbsp;&nbsp;</strong>+91-9876543210,
              +91-1122334455
            </p>
            <p><strong>Email : &nbsp;&nbsp;</strong>info@gvpschool.edu.in</p>
            <p>
              <strong>Office Hours : &nbsp;&nbsp;</strong>Mon - Sat (9:00 AM -
              4:00 PM)
            </p>
          </div>
        </div>
        <div class="contact-second-container">
          <div class="contact-image-cnt">
            <img
              src="/images/school-environment.webp"
              alt="school-environment"
            />
          </div>
        </div>
      </section>

      <!-- LOCATION -->
      <section class="map container">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2228.2280253458375!2d86.3581412!3d24.8038498!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39f179263476a239%3A0xdc897fc5d426ff96!2sSt.%20Columbus%20Public%20School%20Ekdara!5e1!3m2!1sen!2sin!4v1756914783357!5m2!1sen!2sin"
          style="border: 0"
          allowfullscreen=""
          loading="lazy"
        ></iframe>
      </section>

      <!-- CONTACT PAGE -->
      <section class="contact container">
        <div class="contact-paragraph">
          <h2>
            We know that sometimes it is tough to find the information you need.
            So, please go ahead and ask!
          </h2>
        </div>
        <form
          class="form-container"
          action="/contact"
          method="post"
          id="contactForm"
        >
          <div class="input-group">
            <input
              class="user-name"
              type="text"
              name="name"
              required
              placeholder="NAME"
            />
            <span class="error"></span>
          </div>

          <div class="input-group">
            <input
              class="user-email"
              type="email"
              name="email"
              required
              placeholder="EMAIL"
            />
            <span class="error"></span>
          </div>

          <div class="input-group">
            <textarea
              class="user-message"
              name="mess"
              required
              placeholder="MESSAGE"
            ></textarea>
            <span class="error"></span>
          </div>

          <!-- Hidden input for location -->
          <input type="hidden" name="location" id="userLocation" />

          <button type="submit">Send message</button>
        </form>
      </section>

      <section class="ring-image">
        <img src="/images/pattern-rings.svg" alt="pattern-rings" />
      </section>
    </main>

    <!-- FOOTER -->
    <footer>
      <div class="footer-container">
        <div class="about-us">
          <h3>About Us</h3>
