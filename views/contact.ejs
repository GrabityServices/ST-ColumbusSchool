    <!-- HEADING -->
    <section class="contact-heading">
      <div class="contact-overlay"></div>
      <div class="contact-inner">
        <h1>Contact</h1>
        <p class="subtitle">
          We're here to answer your questions and guide you.
        </p>
      </div>
    </section>

    <main>
      <!-- TEXT AND IMAGE -->
      <section class="contact-text-and-image container">
        <div class="contact-first-container">
          <div class="our-location">
            <p>Let's Connect</p>
            <h1>Our Locations.</h1>
          </div>
          <div class="address-section">
            <p><i class="fas fa-map-marker-alt"></i><a href="https://maps.google.com/?q=St.+Columbus+Public+School,+Ekdara,+Jhajha,+Jamui+811308+(Bihar),+India"> St. Columbus Public School, Ekdara, Jhajha, Jamui 811308 (Bihar), India</a></p>
            <p><i class="fas fa-phone"></i><a href="tel:+918541083858"> +91-8541083858</a>,<a href="tel:+918864023465"> +91-8864023465</a></p>
            <p><i class="fas fa-envelope"></i><a href="#" onclick="if(/Mobi|Android/i.test(navigator.userAgent)){location.href='mailto:st.columbus2002@gmail.com?subject=School%20Enquiry&body=Hello,%20I%20would%20like%20to%20know%20more%20about%20the%20school.'}else{window.open('https://mail.google.com/mail/?view=cm&fs=1&to=st.columbus2002@gmail.com&su=School%20Enquiry&body=Hello,%20I%20would%20like%20to%20know%20more%20about%20the%20school.')}"> st.columbus2002@gmail.com</a></p>
          </div>
        </div>
        <div class="contact-second-container">
          <div class="contact-image-cnt">
            <img src="/images/school-place-and-history-min.jpg" alt="school-environment" />
          </div>
        </div>
      </section>

      <!-- LOCATION -->
      <section class="map container">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2228.2280253458375!2d86.3581412!3d24.8038498!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39f179263476a239%3A0xdc897fc5d426ff96!2sSt.%20Columbus%20Public%20School%20Ekdara!5e1!3m2!1sen!2sin!4v1756914783357!5m2!1sen!2sin"
          style="border: 0" allowfullscreen="" loading="lazy"></iframe>
      </section>

      <!-- CONTACT PAGE -->
      <section class="contact container">
        <div class="contact-paragraph">
          <h2>
            We know that sometimes it is tough to find the information you need.
            So, please go ahead and ask!
          </h2>
        </div>
        <form class="form-container" id="contactForm">
          <div class="input-group">
            <input class="user-name" type="text" autocomplete="off" name="name" placeholder="NAME" required />
            <span class="error"></span>
          </div>
          <div class="input-group">
            <input class="user-email" type="email" autocomplete="off" name="email" placeholder="EMAIL" required />
            <span class="error"></span>
          </div>
          <div class="input-group">
            <textarea class="user-message" name="mess" autocomplete="off" placeholder="MESSAGE" rows="5" required></textarea>
            <span class="error"></span>
          </div>
          <input type="hidden" name="location" id="userLocation" />
          <button type="submit" id="submitBtn">Send message</button>

          <!-- Loading and success message -->
          <div id="loading" style="display:none;">
            <i style="display:inline-block;vertical-align:middle;width:24px;height:24px;">
              <svg viewBox="0 0 50 50" style="width:100%;height:100%;">
                <circle cx="25" cy="25" r="20" fill="none" stroke="#3498db" stroke-width="5" stroke-linecap="round"
                  stroke-dasharray="31.4 94.2">
                  <animateTransform attributeName="transform" type="rotate" from="0 25 25" to="360 25 25" dur="1s" repeatCount="indefinite" />
                </circle>
              </svg>
            </i>
          </div>
          <div id="responseMessage"></div>
        </form>
      </section>

      <section class="ring-image">
        <img src="/images/icons/pattern-rings.svg" alt="pattern-rings" />
      </section>
    </main>

